<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Actinides" >

    <Button
        android:id="@+id/Button02"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button01"
        android:layout_alignBottom="@+id/Button01"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button01"
        android:background="#95b9c7"
        android:onClick="Thorium"
        android:text="Th"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button02"
        android:layout_alignBottom="@+id/Button02"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button02"
        android:background="#95b9c7"
        android:onClick="Protactinium"
        android:text="Pa"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button03"
        android:layout_alignBottom="@+id/Button03"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button03"
        android:background="#95b9c7"
        android:onClick="Uranium"
        android:text="U"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button04"
        android:layout_alignBottom="@+id/Button04"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button04"
        android:background="#95b9c7"
        android:onClick="Neptunium"
        android:text="Np"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button06"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button05"
        android:layout_alignBottom="@+id/Button05"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button05"
        android:background="#95b9c7"
        android:text="Pu"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button07"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button06"
        android:layout_alignBottom="@+id/Button06"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button06"
        android:background="#95b9c7"
        android:text="Am"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button08"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button07"
        android:layout_alignBottom="@+id/Button07"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button07"
        android:background="#95b9c7"
        android:text="Cm"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button09"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button08"
        android:layout_alignBottom="@+id/Button08"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button08"
        android:background="#95b9c7"
        android:text="Bk"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button10"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button09"
        android:layout_alignBottom="@+id/Button09"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button09"
        android:background="#95b9c7"
        android:text="Cf"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button11"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button10"
        android:layout_alignBottom="@+id/Button10"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button10"
        android:background="#95b9c7"
        android:text="Es"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button12"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button11"
        android:layout_alignBottom="@+id/Button11"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button11"
        android:background="#95b9c7"
        android:text="Fm"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button13"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button12"
        android:layout_alignBottom="@+id/Button12"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button12"
        android:background="#95b9c7"
        android:text="Md"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button14"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button13"
        android:layout_alignBottom="@+id/Button13"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button13"
        android:background="#95b9c7"
        android:text="No"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="300dp"
        android:background="#95b9c7"
        android:onClick="Actinium"
        android:text="Ac"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="ACTINIDES"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="* The actinide or actinoid (IUPAC nomenclature) series\nencompasses the 15 metallic chemical elements with atomic\n numbers from 89 to 103, actinium through lawrencium.\n* The actinide series derives its name from the group 3 element \nactinium.All but one of the actinides are f-block elements,filling\n the 5f electron shell; lawrencium, a d-block element.\n*All actinides are radioactive and release energy upon radioactive\n decay; naturally occurring uranium and thorium, and synthetically\n produced plutonium are the most abundant actinides on Earth."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:text="Unprocessed \nuranium ore" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01"
        android:layout_below="@+id/Button02"
        android:layout_marginTop="5dp"
        android:text="For more details :" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/Button03"
        android:text="http://en.wikipedia.org/wiki/Actinide"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/Button15"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/Button14"
        android:layout_alignBottom="@+id/Button14"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/Button14"
        android:background="#95b9c7"
        android:text="Lr"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/Button13"
        android:src="@drawable/uranium_core" />

</RelativeLayout>